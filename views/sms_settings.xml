<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sms_settings_view_form" model="ir.ui.view">
        <field name="name">sms.settings.view.form</field>
        <field name="model">sms.settings</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form string="SMS Settings" class="oe_form_configuration o_base_settings">
                <div class="o_control_panel">
                    <header>
                        <button string="Save" type="object" name="execute" class="oe_highlight" />
                        <button string="Discard" type="object" name="cancel" />
                    </header>
                </div>
                <div class="o_setting_container">
                    <div class="settings_tab"/>
                    <div class="settings">
                        <div class="notFound o_hidden">No Record Found</div>
                        <div class="app_settings_block" data-string="SMS Settings" string="SMS Settings" data-key="sms" groups="point_of_sale.group_pos_manager">
                            <h2>SMS Settings</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <label for="default_reply_to"/>
                                    <div class="text-muted">
                                        The default mobile number to reply to
                                    </div>
                                    <field name="default_reply_to"/>

                                    <label for="default_username"/>
                                    <div class="text-muted">
                                        The username for your smsbroadcast.com.au account
                                    </div>
                                    <field name="default_username"/>

                                    <label for="default_password"/>
                                    <div class="text-muted">
                                        The password for your smsbroadcast.com.au account
                                    </div>
                                    <field name="default_password" password='1'/>
                                </div>
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <label for="default_message"/>
                                    <div class="text-muted">
                                        The default message to send
                                    </div>
                                    <field name="default_message" widget='text'/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="action_sms_config_settings" model="ir.actions.act_window">
        <field name="name">SMS Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sms.settings</field>
        <field name="view_id" ref="sms_settings_view_form"/>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <!-- <field name="context">{'module' : 'sms_management'}</field> -->
    </record>

    <menuitem id="menu_sms_settings"
        name="SMS Settings"
        parent="point_of_sale.menu_point_config_product"
        sequence="2"
        action="action_sms_config_settings"
        groups="point_of_sale.group_pos_manager"/>

</odoo>
