<?xml version="1.0" encoding="UTF-8"?>
<templates id="preorders.template" xml:space="preserve">


    <t t-name="LoadPreorderButton">
      <span class="control-button load-preorder">
            <i class="fa fa-shopping-cart"></i>
            Preorder
        </span>
    </t>

    <t t-name="PreorderLine">
        <tr class='preorder-line' t-att-data-id='preorder.id'>
            <td><t t-esc='preorder.name' /></td>
            <td><t t-esc='preorder.partner.name' /></td>
        </tr>
    </t>

    <t t-name="PreorderListScreenWidget">
        <div class="preorderlist-screen screen">
            <div class="screen-content">
                <section class="top-content">
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Cancel
                    </span>
                    <span class='searchbox'>
                        <input placeholder='Search by Customer Name' />
                        <span class='search-clear'></span>
                    </span>
                    <span class='searchbox'></span>
                    <!-- <span class='button new-customer'>
                        <i class='fa fa-user'></i>
                        <i class='fa fa-plus'></i>
                    </span> -->
                    <span class='button next oe_hidden highlight'>
                        Select Preorder
                        <i class='fa fa-angle-double-right'></i>
                    </span>
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow collapsed'>
                            <div class='subwindow-container collapsed'>
                                <div class='subwindow-container-fix preorder-details-contents'>
                                </div>
                            </div>
                        </section>
                        <section class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                                    <table class='preorder-list'>
                                        <thead>
                                            <tr>
                                                <th>Order Number</th>
                                                <th>Customer</th>
                                            </tr>
                                        </thead>
                                        <tbody class='preorder-list-contents'>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>

    <t t-name="PreorderDetails">
        <section class='preorder-details'>
            <div class='preorder-name'><t t-esc='partner.name' /></div>
            <div class='preorder-details-box clearfix'>
                <div class='preorder-details-left'>
                    <div class='preorder-detail'>
                        <span class='label'>Customer Name</span>
                        <t t-if='preorder.partner.name'>
                            <span class='detail preorder-partner'><t t-esc='preorder.partner.name' /></span>
                        </t>
                        <t t-if='!preorder.partner'>
                            <span class='detail preorder-partner empty'>N/A</span>
                        </t>
                    </div>
                    <!-- <div class='preorder-detail'>
